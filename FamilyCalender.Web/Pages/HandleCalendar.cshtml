<h2>Hantera Kalender</h2>

<form method="post">
	<input type="hidden" asp-for="Calendar.Id" />
	<div>
		<label for="name">Kalendernamn</label>
		<input asp-for="NewCalendarName" class="form-control" />
	</div>
	<button type="submit" asp-page-handler="UpdateName" class="btn btn-primary mt-2">Spara namnändring</button>
</form>

<hr />

<form method="post" onsubmit="return confirm('Är du säker på att du vill ta bort hela kalendern?');">
	<input type="hidden" asp-for="Calendar.Id" />
	<button type="submit" asp-page-handler="DeleteCalendar" class="btn btn-danger mt-4">
		Ta bort hela kalendern
	</button>
</form>