@page
@model FamilyCalender.Web.Pages.ResetPasswordModel
@{
}

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p class="text-danger">@Model.Message</p>
}

<form method="post">
    <input type="hidden" asp-for="Token" />

    <div class="form-group">
        <label for="password">Nytt lösenord</label>
        <input type="password" id="password" asp-for="NewPassword" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="confirmPassword">Bekräfta lösenord</label>
        <input type="password" id="confirmPassword" asp-for="ConfirmPassword" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Spara nytt lösenord</button>
</form>